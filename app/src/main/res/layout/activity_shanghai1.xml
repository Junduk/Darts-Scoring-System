<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".Shanghai1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playerOnee"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:id="@+id/playerOne"
            android:textColor="#112406"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:layout_below="@id/playerOne"
            android:layout_centerHorizontal="true"
            android:hint="@string/Name"
            android:autofillHints="@string/Name"
            android:gravity="center"
            android:textSize="30sp"
            android:inputType="text"
            android:maxLength="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name1"
            android:text="@string/playerTwoo"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/playerTwo"
            android:textColor="#112406"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/name2"
            android:layout_below="@id/playerTwo"
            android:layout_centerHorizontal="true"
            android:hint="@string/Name"
            android:autofillHints="@string/Name"
            android:gravity="center"
            android:textSize="30sp"
            android:inputType="text"
            android:maxLength="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name2"
            android:text="@string/playerThreee"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/playerThree"
            android:textColor="#112406"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/name3"
            android:layout_below="@id/playerThree"
            android:layout_centerHorizontal="true"
            android:hint="@string/Name"
            android:autofillHints="@string/Name"
            android:gravity="center"
            android:textSize="30sp"
            android:inputType="text"
            android:maxLength="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name3"
            android:text="@string/playerFourr"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/playerFour"
            android:textColor="#112406"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/name4"
            android:layout_below="@id/playerFour"
            android:layout_centerHorizontal="true"
            android:hint="@string/Name"
            android:autofillHints="@string/Name"
            android:gravity="center"
            android:textSize="30sp"
            android:inputType="text"
            android:maxLength="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name4"
            android:text="@string/playerFivee"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/playerFive"
            android:textColor="#112406"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/name5"
            android:layout_below="@id/playerFive"
            android:layout_centerHorizontal="true"
            android:hint="@string/Name"
            android:autofillHints="@string/Name"
            android:gravity="center"
            android:textSize="30sp"
            android:inputType="text"
            android:maxLength="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name5"
            android:text="@string/playerSixx"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/playerSix"
            android:textColor="#112406"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/name6"
            android:layout_below="@id/playerSix"
            android:layout_centerHorizontal="true"
            android:hint="@string/Name"
            android:autofillHints="@string/Name"
            android:gravity="center"
            android:textSize="30sp"
            android:inputType="text"
            android:maxLength="6"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:layout_marginTop="18dp"
            android:layout_below="@id/name6"
            android:layout_centerHorizontal="true"
            android:text="@string/Start"
            android:textStyle="bold"
            android:textSize="50sp"
            android:onClick="check"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/returnToPickingTheGames"
            android:layout_below="@id/start"
            android:layout_marginTop="5dp"
            android:text="@string/Return"
            android:textStyle="italic|bold"
            android:textSize="25sp"
            android:onClick="setReturnToPickingTheGames"
            android:background="@drawable/oval"/>
    </RelativeLayout>
</ScrollView>